                  label Type of Event
                  input.form-control(type='text', name='book', placeholder='Enter the Type of Event', required='', aria-required='true')
                .form-group
                  label Message
                  textarea.form-control(type='text', name='message', placeholder='Enter your Message', required='', aria-required='true')
              .card-action
                button.btn.waves-effect.waves-light.pink(type='submit')
